<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/aust3"
    tools:context="com.example.user.intracity.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=" Register as"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:width="120dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="58dp"

        android:id="@+id/RegId"
        android:width="320dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:text="ID" />

    <TextView
        android:text="STUDENT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"

        android:layout_toRightOf="@+id/editText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="25dp"
        android:id="@+id/RegPw"
        android:width="320dp"
        android:text="password"
        android:layout_below="@+id/RegId"
        android:layout_alignLeft="@+id/RegId"
        android:layout_alignStart="@+id/RegId" />

    <Button
        android:text="Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="135dp"
        android:id="@+id/RegButton"
        android:onClick="onRegClick"
        android:layout_below="@+id/RegPw"
        android:layout_alignLeft="@+id/RegPw"
        android:layout_alignStart="@+id/RegPw" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/RegPw"
        android:layout_alignLeft="@+id/RegPw"
        android:layout_alignStart="@+id/RegPw"
        android:layout_marginTop="19dp"
        android:id="@+id/RegmPw"
        android:layout_alignRight="@+id/RegPw"
        android:layout_alignEnd="@+id/RegPw"
        android:text="Password" />

</RelativeLayout>